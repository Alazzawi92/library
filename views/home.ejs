<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>livers</title>
  </head>
  <body>
    <div id="container">
      <nav>
        <ul>
          <% if (user) { %>
          <li><a href="/">Home</a></li>
          <li><a href="/show-profile-user/<%= user._id %>">Profile</a></li>
          <li><a href="/add-book/<%= user._id %>">Ajouter un livre</a></li>
          <li id="deconnecter"><a href="/logout">Déconnecter</a></li>

          <% }else{ %>
          <li><a href="/">Home</a></li>
          <li><a href="/login">Se Connecter</a></li>
          <li><a href="/register">S'enregistrer</a></li>
          <% } %>
        </ul>
      </nav>
    </div>
 <% if (user) { %>
  
<h1 style="display: flex; justify-content: center">
  Bienvenue <%= user.first %> <%= user.last %> dans notre bibliothèque
</h1>
<% } else { %>
<h1 style="display: flex; justify-content: center">
  Bienvenue dans notre bibliothèque
</h1>
<% } %>


<div class="book-container">
  <% books.forEach(function(book) { %>
  <div class="book-card">
    <img src="<%= book.cover %>" alt="Couverture de <%= book.title %>" />
    <h2><%= book.title %></h2>
    <p>Auteur: <%= book.author %></p>
    <p>Description: <%= book.description %></p>
    <p>Genre: <%= book.genre %></p>
    <p>ISBN: <%= book.ISBN %></p>
    <p>Pages: <%= book.pages %></p>
    <p>Langue: <%= book.language %></p>
    <p>Éditeur: <%= book.publisher %></p>
    <p>Format: <%= book.format %></p>
    <p>Dimensions: <%= book.dimensions %></p>
    <p class="rating">Note: <%= book.rating %>/5</p>
    <p>ajouteur: <%= book.first %><%= book.last %></p>
  </div>
  <% }); %>
</div>

<%- include('partials/footer') %>
